{% extends "Audit/audit_base.html.twig" %}
{% set menu_selected = 'audit' %}
{% block breadcrumbs %}
    <li><a href="./index.html">Asset Manager</a></li>
    <li class="active">Audit Control Panel</li>
    {% endblock breadcrumbs %}

{% block h1 %} 
    View Report         
{% endblock h1 %}

{% block audit_body %}

    <section>
        <div class="page-header">
            <h1>{{data.data.Misc.AuditName}} <small>- {{data.data.Misc.Auditor}}</small></h1>
        </div>

        {% for key,Group in data.data.QuestionAnswer %}
            <h2>{{ key }}</h2>
            <div class="row">
                <div class="col-xs-6">
                    <label>Question</label>
                </div>
                <div class="col-xs-2">
                    <label>Answer</label>
                </div>
                <div class="col-xs-1">
                    <label>Score</label>
                </div>
                <div class="col-xs-3">
                    <label>Image</label>
                </div>
            </div>
            {% for QA in Group %}
                <div class="row alternate">
                    <div class="col-xs-6">
                        <p>{{ QA.Question }}</p>
                    </div>
                    <div class="col-xs-2">
                        <p>{{ QA.Answer }}</p>
                    </div>
                    <div class="col-xs-1">
                        <p>{{ QA.AnswerScore }}</p>
                    </div>
                    <div class="col-xs-3">
                        {% if QA.AnswerEvidence %}<img class="img img-thumbnail" src="{{ QA.AnswerEvidence }}">{% endif %}
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

    </section>


